                            </div>
                        </nav>
                        <div class="tab-content" id="nav-tabContent">
                            <div class="tab-pane fade show active" id="nav-extra" role="tabpanel" aria-labelledby="nav-extra-tab">
                                <!--Extra Menu (1 entrée, 1 pizza Médium, 2 boissons d’au plus 33cl)-->
                                <form action="add-extra-menu-cart-item" method="post">
                                    <label for="entreeExtraMenu">Choisissez une entrée</label><br>
                                    <select id="entreeExtraMenu" name="entreeExtraMenu" class="custom-select">
                                        <% locals.params.entreeMenu.forEach(el=>{ %>
                                        <option value="<%- el.id_plat %>"><%- el.nom %></option>
                                        <% }) %>
                                    </select>

                                    <label for="pizzaExtraMenu">Choisissez une pizza medium</label><br>
                                    <select id="pizzaExtraMenu" name="pizzaExtraMenu" class="custom-select">
                                        <% locals.params.pizzasMenu.forEach(el=>{ %>
                                            <option value="<%- el.id_plat %>"><%- el.nom %></option>
