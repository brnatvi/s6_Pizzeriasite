                                        <% }) %>
                                    </select>

                                    <button id="form-extra-menu" type="submit" class="btn btn-primary">Ajouter au panier</button>

                                </form>
                            </div>
                            <div class="tab-pane fade" id="nav-mega" role="tabpanel" aria-labelledby="nav-mega-tab">
                                <!--Mega Menu (2 entrées, 2 pizzas Médium, 1 boisson d’au moins 1l)-->
                                <form action="add-mega-menu-cart-item" method="post">
                                    <label for="entreeMegaMenu">Choisissez une entrée</label>
                                    <select id="entreeMegaMenu" name="entreeMegaMenu" class="custom-select">
                                        <% locals.params.entreeMenu.forEach(el=>{ %>
                                            <option value="<%- el.id_plat %>"><%- el.nom %></option>
                                        <% }) %>
                                    </select>

                                    <label for="entreeMegaMenuB">Choisissez une entrée</label>
                                    <select id="entreeMegaMenuB" name="entreeMegaMenuB" class="custom-select">
                                        <% locals.params.entreeMenu.forEach(el=>{ %>
                                            <option value="<%- el.id_plat %>"><%- el.nom %></option>
                                        <% }) %>
                                    </select>

                                    <label for="pizzaMegaMenu">Choisissez une pizza medium</label>
                                    <select id="pizzaMegaMenu" name="pizzaMegaMenu" class="custom-select">
                                        <% locals.params.pizzasMenu.forEach(el=>{ %>
                                            <option value="<%- el.id_plat %>"><%- el.nom %></option>
                                        <% }) %>
                                    </select>

                                    <label for="pizzaMegaMenuB">Choisissez une pizza medium</label>
                                    <select id="pizzaMegaMenuB" name="pizzaMegaMenuB" class="custom-select">
                                        <% locals.params.pizzasMenu.forEach(el=>{ %>
                                            <option value="<%- el.id_plat %>"><%- el.nom %></option>
                                        <% }) %>
                                    </select>

