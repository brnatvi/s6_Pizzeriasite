        <!-- New Order -->
        <div id="new-order">
            <h1>Novelle livraison à exécuter</h1>
            <div class="card-cmd secondary secondary-livreur">
                <div id="header-cart">
                    <div class="info info-livreur">
                        <p>Commande n° <%- (locals.params.idCommande===undefined)?"0":locals.params.idCommande %></p>
                        <% console.log(locals.params) %>
                        <p>Heure de livraison - 19h50</p>
                    </div>
                    <div class="price price-livreur">
                        <p>Total (TTC)</p>
                        <p><%- (locals.params.totalPrice===undefined)?"0":locals.params.totalPrice %> &#8364;</p>                       
                    </div>
                    <button type="button" class="btn btn-primary btn-livreur">Prendre en charge la commande</button>
                </div>

                <div id="header-border"></div>

                <div>
                    <% if (locals.params.listContenu!==undefined) { locals.params.listContenu.forEach(article => {%>                    
                        <div class="element">
                            <p> <%- article.plat %></p>
                            <p class="content-commande-livreur"><%- article.description %> </p>
                            <div class="element-menu">
                                <p><%- article.prix %> &#8364;</p>
                            </div>
                        </div>
                    <% })} %>
                </div> 

                <div id="header-border"></div>

                <!---<div class="info info-client">  -->
                    <div class="element">
                        <p>Client :   </p>
                        <p class="field"><%- (locals.params.nameClient===undefined)?"-":locals.params.nameClient %></p>                       
                    </div>
                    
                    <div class="element">
                        <p>Addresse : </p>
                        <p class="field"></p><%- (locals.params.adressClient===undefined)?"-":locals.params.adressClient %></p>                       
                    </div>

                    <div class="element">
                        <p>Tel:      </p>
                        <p class="field"><%- (locals.params.mobileClient===undefined)?"-":locals.params.mobileClient %></p>                       
                    </div>
                </div>
            </div>
        </div>
